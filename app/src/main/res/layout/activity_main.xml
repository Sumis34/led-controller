<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:onClick="buttonClicked"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnMode"
        android:layout_width="179dp"
        android:layout_height="48dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="478dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="42dp"
        android:onClick="buttonClicked"
        android:text="Mode"
        app:backgroundTint="#6EE670"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRainbow"
        android:layout_width="179dp"
        android:layout_height="48dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="71dp"
        android:onClick="buttonClicked"
        android:text="Rainbow"
        app:backgroundTint="#2E8CF1"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHigher" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="443dp"
        android:text="Status"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHigher"
        android:layout_width="78dp"
        android:layout_height="60dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="200dp"
        android:onClick="buttonClicked"
        android:text="+"
        android:textColor="#393939"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnMode"
        app:layout_constraintEnd_toStartOf="@+id/btnLower"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnLower"
        android:layout_width="78dp"
        android:layout_height="60dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="201dp"
        android:onClick="buttonClicked"
        android:text="-"
        android:textColor="#393939"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnHigher"
        app:layout_constraintTop_toBottomOf="@+id/status"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/inputIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="55dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="IP-Adress"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btnHigher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status" />

</androidx.constraintlayout.widget.ConstraintLayout>